.content
	width       : 100% 
	margin-left : 0
	+from-width('large')
		width       : 92%
	+from-width('extra')
		width       : 88%
		margin-left : 7rem
	
	h1,h3
		padding : 0 0 0 1rem
	p 
		padding : 0 1rem 0 1rem

.arrow1
	position: absolute
	width: 1.5%
	border: 1px solid #222
	height: 3%
	top: 8%
	left: 15%
	&:hover ~ .image1
		display : block
		width: 30rem;
		height: 30rem;
		position: absolute;
		top: 15%;
		left: 20%;
.image1
	display : none

