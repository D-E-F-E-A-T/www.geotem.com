.box-method
	col(1/3)
	margin-right 		: 0
	margin-left 		: 0
	width 				: 33.333%
	overflow 			: auto;
	

	img 
		width : 100%
		height : auto
		transition: all .2s ease-in-out
		

.content-method-1, .content-method-2, .content-method-3
	col(3/3)
	background-color : blue
	color : white
	hover-lighten()
	p
		text-align : center
		
.block5
	p
		padding : 25% 5% !important


selector:hover selector
	css


.text
	span
		+from-width('s')
			font-size: 3vw
			position: relative
			top : -5em
		+from-width('m')
			font-size: 3vw
		+from-width('l')
			font-size: 2vw
		+from-width('xl')
			font-size: 2vw

.content-method-1.box-method.box-1:hover .content-method-1.box-method.box-2
	hover-pop()

