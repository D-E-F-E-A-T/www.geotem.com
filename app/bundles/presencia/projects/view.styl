.box-method
	col(1/3)
	margin-right 		: 0
	margin-left 		: 0
	width 				: 33.333%
	overflow 			: auto;
	

	img 
		width : 100%
		height : auto
		transition: all .2s ease-in-out
	// img:hover
	// 	transform: scale(1.1)
		

.content-method-1, .content-method-2, .content-method-3
	col(3/3)
	background-color : blue
	color : white
	hover-lighten()
	p
		text-align : center
		
.block5
	p
		padding : 25% 5% !important
.block12
	img
		transform translate(0px,-205px) !important
.block9
	img
		transform translate(0px,-105px) !important

selector:hover selector
	css



.content-method-1.box-method.box-1:hover .content-method-1.box-method.box-2
	hover-pop()

