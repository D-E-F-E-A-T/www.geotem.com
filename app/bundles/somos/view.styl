.container-customer-1
	span(5/5)
	text-align : center
	background: white !important
	.cust-box-1
		span(1/5)
		background: white
		img
			width : 70%
			
+to-width('s')
	.container-customer-1
		text-align : center
		.cust-box-1
			span(1/3)

			
.container-customer-2
	span(4/4)
	text-align : center
	background: white !important
	.cust-box-2
		span(1/4)
		background: white
		img
			width : 70%

.container-customer-3
	span(2/2)
	text-align : center
	background: white !important
	.cust-box-3
		span(1/2)
		background: white
		img
			width : 28%
		


.content
	h2
		text-align    : center
		padding-top   : 2rem
		padding-bottom: 2rem
		font-size     : 1.5em
		text-transform : none
	

		+from-width('m')
			font-size  : 2.5em
		+from-width('l')
			font-size  : 3.5em



