.container-customer-1
	span(5/5)
	text-align : center
	background: white !important
	.cust-box-1
		span(1/5)
		background: white
		img
			width : 70%
.customer-1
	span(3/3)
	text-align : center
	background: white !important
	.cust-box-1
		span(1/3)
		background: white
		img
			width : 70%
.customer-2
	span(2/2)
	text-align : center
	background: white !important
	.cust-box-2
		span(1/2)
		background: white
		text-align : center
		img
			width : 50%


.container-customer-2
	span(4/4)
	text-align : center
	background: white !important
	.cust-box-2
		span(1/4)
		background: white
		img
			width : 70%

.content
	h2
		text-align    : center
		padding-top   : 2rem
		padding-bottom: 2rem
		font-size     : 1.5em
		text-transform : none


		+from-width('m')
			font-size  : 2.5em
		+from-width('l')
			font-size  : 3.5em

+to-width('s')
	.contenedor
		display : block
	.content
		display : block
+from-width('m')
	.content
		display: block
	.contenedor
		display : none



