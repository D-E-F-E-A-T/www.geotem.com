.cust-box
	display : inline-block
	background: white
	margin-bottom: 3px
	text-align:center
	margin : 0.5em 2em 0.5em 2em

.content
	h2
		text-align    : center
		padding-top   : 2rem
		padding-bottom: 2rem
		font-size     : 1.5em
		text-transform : none
	

		+from-width('m')
			font-size  : 2.5em
		+from-width('l')
			font-size  : 3.5em

.container-customer
	text-align : center
	background: white !important
	width: 100%
	

.content-p1
	width   : 100% 
	margin  : 0 auto
	max-width : 1024px
	
	+from-width('large')
		margin-left : 1vw
		width : 95%
		max-width : 1024px
		p 
			padding : 0 2.8rem 0 1rem

	+from-width('extra')
		margin  : 0 auto
		max-width : 1024px
	h1,h3
		padding : 0 0 0 1rem		
	p 
		padding : 0 2.8rem 0 1rem	
			