	edit()
	.box-icons 
		col(7/7)
		position : relative
		padding-top: 1em
		text-align: center

	.cover 
			position : relative
		.cover-img
			position : relative
			
		.cover-img	img
			height :  auto
			width  : 100%
			position : relative
		
		.cover-caption
			background : black
			opacity : 0.5
			position: absolute
			bottom: 0;
			width: 100%;
			color: white;
			padding: 0.5rem
	  
	.item
		col(1/7)
		
		
	.item img
		width :100%
		height :auto
		hover-pop ()
		
	.imagen
		position: relative	

	.imagen img 
		
		position: absolute
		width: 100%
		height: auto
		top: 0

	.lab 
		position : absolute
		width 	 : 30%
		right 	 : 0
		font-size : 3vw	

	.lab h3
		position : relative
		color: white
		font-size: 1em
		text-align: center
		font-weight: bold
		

