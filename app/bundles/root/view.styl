@keyframes slidy
		0%
			left 0%
		12.5%
			left 0%
		25%
			left -100%
		37.5%
			left -200%
		50%
			left -300%
		62.5%
			left -400%	
		75%
			left -500%
		87.5%
			left -600%	
		100%
			left -700%


#slider
	overflow 	   : 	hidden
	.slider-box-home
		position   : 	relative
		width      : 	800%
		margin     : 	0
		left       : 	0
		font-size  : 	0
		animation  : 	40s slidy infinite
		
		.slider-content
			width   : 	12.5%
			display : 	inline-block
			img
				width :100%
				

.noticias
	padding 	: 0 2rem
	max-width : 1024px
	margin : 0 auto

	
.headline
	position         : relative
	display          : table
	margin-top       : 0
	margin-bottom    : 2rem
	height 			 : 10rem
	background-image : url("/static/img/slider/Slide1.png")
	background-size  : cover
	color 	 		 : white
	h3
		padding-top    : 1.5rem
		padding-left   : 1rem
	p 
		background-color : #494946 
		height 			 : 5rem	
		opacity 		 : 0.8
		margin-top 		 : 4.7rem
		margin-bottom 	 : 0
		padding     : 1rem
		
	time
		display     : block
		position    : absolute
		z-index     : 9
		background  : #CE1326 
		padding     : 0.5rem 1rem
		display     : block
		top         : 0
		left        : 50%
		transform   : translate(-50%, -50%)
		color       : white
		font-weight : bold
		box-shadow: 0 0.25rem 0.5rem 0 rgba(0,0,0,0.75);
		font-size: 1rem

	+from-width('m')
		col(1/2)
		margin-right : 3%
		margin-left  : 3%
		width        : 44%
		h3
			line-height : 1.9rem
			font-size : 1.4rem
				
	+from-width('l')
		col(1/3)
		height       : 17rem
		width        : 30%
		margin-right : 1%
		margin-left  : 2%
		p 
			height     : 7rem
			margin-top : 6.2rem	
		h3
			font-size  : 1.5rem
		
h2
	text-align     		: center
	padding-top    		: 2rem
	padding-bottom 		: 2rem
	font-size      		: 1.5em

	+from-width('m')
		font-size  		: 2.5em
	+from-width('l')
		font-size  		: 3.5em
	