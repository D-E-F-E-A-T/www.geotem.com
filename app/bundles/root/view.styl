#main 
	edit()				
	@keyframes slidy
			0%
				left 0%
			20%
				left 0%
			25%
				left -100%
			45%
				left -100%
			50%
				left -200%
			70%
				left -200%	
			75%
				left -300%
			95%
				left -300%	
			100%
				left -300%


	#slider
		overflow 	   : hidden
		figure
			position   : relative
			width      :500%
			margin     :0
			left       :0
			font-size  :0
			animation  :10s slidy infinite
			img
				width   :20%
				display : inline-block

			
	.noticias
		padding 	: 0 2rem

		
	.headline
		position         : relative
		display          : table
		margin-top       : 0
		margin-bottom    : 2rem
		height 			 : 12rem
		background-image : url("/static/anime.jpg")
		background-size  : cover
	
		+from-width('m')
			col(1/2)
			margin-right : 3%
			margin-left  : 3%
			width        : 44%
		+from-width('l')
			col(1/3)
			height       : 17rem
			width        : 30%
			margin-right : 1%
			margin-left  : 2%	
			
	h2
		text-align    : center
		padding-top   : 2rem
		padding-bottom: 1rem
		font-size     : 2em

		+from-width('m')
			font-size  : 2.5em
		+from-width('l')
			font-size  : 3.5em
	