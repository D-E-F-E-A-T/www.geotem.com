.box-icons
	col(5/5)
	position	: relative
	padding-top : 1em
	max-width : 1024px
	text-align	: left
	margin : 0 auto
	.item
		col(1/5)
		
		img
			height			:auto
			hover-pop()
			+from-width('mini')
				width		:100%
			+from-width('small')
				width		:100%
			+from-width('medium')
				width		: 100%
			+from-width('large')
				width		: 40%
			+from-width('extra')
				width		: 40%	
				
+to-width('s')
	.cover-cd
		h2
			margin: 9em -20em 0.5em 2.5em !important
			font-size: 4vw
			padding-left: 30%