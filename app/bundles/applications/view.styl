*
	a
		text-decoration : none

.cover-caption
	padding-left : 1em
	h1 
		text-shadow : 4px 2px 10px rgba(0, 0, 0, 0.8) !important;
		font-size : 2em

span
	p
		font-size 			: 2vw
		font-weight 		: 800
		line-height			: 110%
		
		color 				: #3f3f3f
		+from-width('m')
			font-size 		 : 1.8vw
		+from-width('l')
			font-size 		 : 1.8vw
		+from-width('xl')
			font-size 		 : 1.8vw
span
	color 		: white
	font-size 	: 1em
	font-weight : bold
	position 	: relative
	text-align 	: center
	+to-width('s')
