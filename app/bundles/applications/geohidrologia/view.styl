.box-icons
	col(6/6)
	position	: relative
	padding-top : 1em
	max-width : 1024px
	text-align	: left
	margin : 0 auto
	.item
		col(1/6)
		
		img
			height			:auto
			hover-pop()
			+from-width('mini')
				width		:100%
			+from-width('small')
				width		:100%
			+from-width('medium')
				width		: 100%
			+from-width('large')
				width		: 60%
			+from-width('extra')
				width		: 60%	
