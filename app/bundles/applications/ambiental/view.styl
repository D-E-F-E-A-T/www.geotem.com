	background-color : rgba(0, 0, 0, 0.5)
	width : 34.9%
	color : white
	top :58.3%
	padding : 5px 10px

.label1
	top : 60%

.label3
	top : 40%	

.label4
	top : 20% 

.gps-tag
	color #747474

.electro-tag
	color #ffb600

.electri-tag
	color #aa5b26

.box-icons
	col(4/4)
	position	: relative
	padding-top : 1em
	max-width : 1024px
	text-align	: center
	margin : 0 auto
	.item
		col(1/4)
		
		img
			height			:auto
			hover-pop()
			+from-width('mini')
				width		:100%
			+from-width('small')
				width		:100%
			+from-width('medium')
				width		: 100%
			+from-width('large')
				width		: 40%
			+from-width('extra')
				width		: 40%
				

::-webkit-scrollbar{
  width: 8px;
  background: trasparent;
}
::-webkit-scrollbar-button{
  width:8px;
  height: 5px;
}
::-webkit-scrollbar-track{
  background:#3c454e;
  border:thin solid trasparent;
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  -webkit-border-radius: 10px;
  border-radius: 10px;
}
::-webkit-scrollbar-thumb{
  background: -webkit-linear-gradient(top, #5aafb0, #4ca06d);
  -webkit-box-shadow:   inset 0 1px 0 rgba(255,255,225,.5),
                inset 1px 0 0 rgba(255,255,255,.4),
                inset 0 1px 2px rgba(255,255,255,.3);
 
  border:thin solid #232c34;
  border-radius: 10px;
  -webkit-border-radius: 10px;
}
::-webkit-scrollbar-thumb:hover{
    background: -webkit-linear-gradient(top, #4ca06d, #5aafb0);
}
/* Pseudo-clase */
::-webkit-scrollbar-thumb:window-inactive {
  background: rgba(77,161,112,.6);
}