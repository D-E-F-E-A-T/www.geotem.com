main 
	position : relative !important

.content
	margin-top : 4% !important

.equipment-titulo
	col(3/3)
			
	.company
		col(1/3)
		width : 45%
		h2
			line-height: 1.1em
		
	.line2
		col(1/3)
		width : 20%
		margin-top: 1em

		img
			width: 100%
			text-align: center
			margin-top: .08em
			float : rigth
			height : 3px
			
.equipment-content
	col(4/4)
	margin-bottom : 0.5em
	margin-top: -0.5vw

	.equipment-image
		position : relative
		padding 			: 1em 0rem 1rem 2rem
		margin-left: 5%
		col(1/4)
		text-align 			: center
		img
			width 			: 100%;
			
	.equipment-text
		col(3/4)
		padding 			: 0 2em 
		width : 72%
		margin-top : 3.5vw
		
		.equipment-title h2
			font-size 		: 2em
		.equipment-description
			font-size 		: 1em
			
.equipment-url p
	text-align : center

+to-width('s')
	.equipment-content
		col(4/4)
		margin-top	: -3vw
		padding 	: 1em 0 0 0

		.company
			col(1/4)
			width : 100%
		.equipment-image 
			col(1/4)
			width : 100%
			img
				width : 75vw
				margin: 0 auto
				margin-bottom: 1.5vw
				
		.equipment-title
			col(1/4)
			
			width : 78vw
			line-height : 1.5em
			margin-top: -13vw
			h3
				padding : 1rem 0 0 0
		
		.equipment-text
			col(1/4)	
			width : 95%
			p
				margin-bottom: 10vh
				
+from-width('m')
	.equipment-content
		.equipment-title
			h3
				padding: 0
		.equipment-image 
			padding 		: 5.2em 0rem 1rem 0
			
+from-width('large')
	.equipment-content
		.equipment-text
			margin-top: 3vw
.line
	text-align center
	a
		margin-left : 5% 
	span
		display inline-block
		position relative
		font-size : 1.8rem
		&:before
			right 100%
			margin-right 15%
			+to-width('s')
				margin-right 4%
		&:after
			left 100%
			margin-left 15%
			+to-width('s')
				margin-left 4%

.line span:before,
.line span:after
	content ""
	position absolute
	height 30%
	border-bottom 2px solid black
	top 0%
	width 500%
	+to-width('s')
		width 100%
