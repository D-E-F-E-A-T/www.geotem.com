
.equipment-titulo
	col(3/3)
	.line
		col(1/3)
		width : 20%
		margin-top: 1em
		margin-left : 3%
		img
			width: 100%
			text-align: center
			margin-top: 0.8em
			float : left
			height : 3px
			
	.company
		col(1/3)
		width : 45%
		h2
			line-height: 1.1em
		
	.line2
		col(1/3)
		width : 20%
		margin-top: 1em

		img
			width: 100%
			text-align: center
			margin-top: .08em
			float : rigth
			height : 3px
	
.equipment-url p
	text-align 	: center
			
.equipment-content
	col(4/4)
	margin-bottom : 1em
	padding : 0

	.equipment-image
		position : relative
		padding 			: 1em 0 1em 0
		col(1/4)
		text-align 			: center
		img
			height 			: 23vh;
			width 			: 14vw;
			
	.equipment-text
		col(3/4)
		padding 			: 0 2em 
		
		.equipment-title h2
			font-size 		: 2em
		.equipment-description
			font-size 		: 1em	

+to-width('s')
	.equipment-content
		col(4/4)

		.company
			col(1/4)
			width : 100%
		.equipment-image 
			col(1/4)
			width : 100%
			img
				height : 70%
				width : 80%
				margin : 0 2.5em	
		.equipment-title
			col(1/4)
			
			width : 100%
			line-height : 1.4em	
		.equipment-text
			col(1/4)	
			width : 100%
	hr
		background-color: green
			
