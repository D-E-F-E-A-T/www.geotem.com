*
	margin	: 0
	padding	: 0
.content
	margin-top: -4px !important


.image_title
	position 	: absolute
	left 		: 0
	bottom 		: 0
	width 		: 100vw

.image_title-2
	position 	: absolute
	left 		: 0
	top 		: 0
	width 		: 100vw

.image_title a
	display 		: block
	color 			: #fff
	text-decoration : none
	padding      	: 1.3vw 1vw 1.3vw 1vw
	font-size 		: 1.2vw

.image_title-2 a
	display 		: block
	color 			: #fff
	text-decoration : none
	padding 		: 1vw
	font-size 		: 16px

.cover-2
	max-width : 1024px
	margin : 0 auto

+to-width('s')
	.image_title a
		display 		: block
		color 			: #fff
		text-decoration : none
		padding      	: 1.3vw 1vw 1.3vw 1vw
		font-size 		: 2.2vw

.box-icons
	col(7/7)
	position 	: relative
	padding-top : 1em
	text-align 	: center
	.item
		col(1/7)
		img
			height 			:auto
			hover-pop ()
			+from-width('s')
				width 		:100%
			+from-width('m')
				width 		: 100%
			+from-width('l')
				width 		: 80%
			+from-width('xl')
				width 		: 80%

