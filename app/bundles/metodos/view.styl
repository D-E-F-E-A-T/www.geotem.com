*
	margin	: 0
	padding	: 0

.accordian 
	width		: 100vw 
	height		: 30vw
	overflow	: hidden

.accordian ul 
	width	: 2000px

.accordian li 
	position			: relative
	display				: block
	width				: 14.24vw
	float				: left
	border-left			: 1px solid #fff
	transition			: all 0.5s
	-webkit-transition	: all 0.5s
	-moz-transition		: all 0.5s
	
.accordian ul:hover li 
	width 	: 10px

.accordian ul li:hover 
	width 	: 95vw

.accordian li img 
	display	: block
	height	: 30vw
	width	: 100vw

.image_title 
	position 	: absolute
	left 		: 0
	bottom 		: 0
	width 		: 100vw
		
.image_title-2 
	position 	: absolute
	left 		: 0
	top 		: 0
	width 		: 100vw

.image_title a
	display 		: block
	color 			: #fff
	text-decoration : none
	padding      	: 1.3vw 1vw 1.3vw 1vw
	font-size 		: 1.2vw	

.image_title-2 a
	display 		: block
	color 			: #fff
	text-decoration : none
	padding 		: 1vw
	font-size 		: 16px

.cover-2
	max-width : 1024px
	margin : 0 auto

+to-width('s')
	.image_title a
		display 		: block
		color 			: #fff
		text-decoration : none
		padding      	: 1.3vw 1vw 1.3vw 1vw
		font-size 		: 2.2vw
	
.box-icons 
	col(7/7)
	position 	: relative
	padding-top : 1em
	text-align 	: center
	.item
		col(1/7)
		img
			height 			:auto
			hover-pop ()
			+from-width('s')
				width 		:100%
			+from-width('m')
				width 		: 100%
			+from-width('l')
				width 		: 80%
			+from-width('xl')
				width 		: 80%

.cover-caption
	h1 
		text-shadow : 4px 2px 10px rgba(0, 0, 0, 0.8) !important;
		+from-width('s')
			font-size : 3vw
		+from-width('m')
			font-size : 3vw
		+from-width('l')
			font-size : 2vw
		+from-width('xl')
			font-size : 2vw