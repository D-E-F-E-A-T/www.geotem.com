@require './colors'

$form-options =
	line-height: 1.8rem

$form(\
	color-fg = $color-fg,\
	color-bg = $color-bg,\
	color-up = $color-02,\
	color-ok = $color-ok,\
	color-no = $color-no,\
	color-ey = $color-ey)

	input:not([type='file'])
	textarea
	select
	label
	button
		display    : block
		position   : relative
		width      : 100%
		box-sizing : border-box // Ignore padding in width calculations
		// border     : 0
		appearance : none
		color      : color-fg

	input:not([type='file'])
	select
	button
		height           : 2.5rem
		line-height      : 2.5rem


	input:not([type='file'])
	select
	button
	textarea
		color            : color-fg
		background-color : color-bg
		border           : 1px solid lighten(color-fg, 70%)
		border-radius    : 0.25rem

	select
	textarea
	input:not([type='button']):not([type='submit']):not([type='reset']):not([type='file'])
		padding: 0 0.5rem
		outline: none

		&:focus
			border-color     : lighten(color-up, 5%)
			background-color : lighten(color-up, 85%)

	label:focus
		color: red

	textarea
		padding-top:0.25rem

	button
		color            : color-bg
		background-color : color-up
		text-align       : center !important
		border           : 0
		font-weight      : bold
		margin           : 0
		padding          : 0

		&:hover
			background-color: darken(@background-color, 5%)

		&[type='submit']
			background-color: color-ok

			&:hover
				background-color : darken(@background-color, 5%)

		&[type='reset']
			background-color: $color-no

			&:hover
				background-color : darken(@background-color, 5%)

		&[disabled]
		&[disabled]:hover
			background-color : lighten(color-fg, 75%)
			color            : lighten(color-fg, 60%)
