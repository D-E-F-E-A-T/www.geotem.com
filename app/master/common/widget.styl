.content
	+from-width('mini')
		max-width : 480px !important
		margin : 0 auto 
		padding: 0 1.3em
		h1
			line-height : 3vw
			font-size : 1.5em
	+from-width('small')
		max-width : 480px !important
		margin : 0 auto 
		padding: 0 1em
	+from-width('medium')
		max-width : 768px !important
		margin : 0 auto 
	+from-width('large')
		max-width : 1024px !important
		margin : 0 auto 
	+from-width('extra')
		max-width : 1024px !important
		margin : 0 auto 


.cover-caption-description
	position: absolute;
	width: 40%;
	right: 0;
	bottom: 12%;
	z-index: 0;
	color: white;
	font-weight: 900;
	font-size: 1.1em;
	text-align: left;
	line-height: 24px;
	text-shadow: 4px 2px 10px rgba(0,0,0,0.8)
	padding : 1em
	background-color : rgba(0,0,0,0.7)
	display : none
	+from-width('small')
		display : none
	+from-width('medium')
		display : none 
	+from-width('large')
		display : none
		padding : 0.5em
	+from-width('extra')
		display : none
		
.cover-img
	&:hover ~ .cover-caption-description
		+from-width('small')
			display : none
		+from-width('medium')
			display : none 
		+from-width('large')
			display : block
			padding : 0.5em
		+from-width('extra')
			display : block
		
