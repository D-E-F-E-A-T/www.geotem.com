//------ imagenes portadas

*
	box-sizing: border-box

.cover
	position: relative
	.cover-img
		position : relative
		
	.cover-img	img
		height		: auto
		position	: relative
		width		: 100%
	.cover-caption
		background	: rgba(34, 34, 34, 0)
		bottom		: 0
		color		: white
		padding		: 0.5rem
		position	: absolute
		width		: 100%
.countries
	font-size	: 2vw
	line-height : 1.125em
	position	: relative
	display		: inline-block
	text-align	: left
	bottom		: 70%
	text-shadow: 4px 2px 10px rgba(0, 0, 0, 0.81);
	h1
		color :  white
	+from-width('medium')
		font-size 		: 1.5vw
	+from-width('large')
		font-size 		 	: 2vw
	+from-width('extra')
		font-size 		 	: 1.5vw

.text
	font-size	: 1.5vw
	line-height : 1.125em
	position	: relative
	display		: inline-block
	text-align	: justify
	margin-left	: 50%
	top			: 0
	padding-right		: 1em
	text-shadow: 4px 2px 10px rgba(0, 0, 0, 0.81);

	+from-width('medium')
			font-size 		: 2vw
			padding-right	: 1em
	+from-width('large')
		font-size 		 	: 1.8vw
		padding-right		: 1em
		height: -1.5em
	+from-width('extra')
		font-size 		 	: 1.5vw
		padding-right		: 1em

//-#########################-seccion aplicaciones-##########
.country
	+from-width('extra')
		padding : 0 1em 0 1em !important
	+from-width('large')
		padding : 0 1em 0 1em !important
		p
			font-size : 1vw
			width: 5vw
	span
		col(1/2)
		margin-right	: 0
		margin-left		: 1%
		+from-width('medium')
			col(1/5)
			margin-right	: 0
			margin-left		: 2%
		+from-width('large')
			col(1/10)
		+from-width('extra')
			col(1/10)

.box-icons
	col(7/7)
	position	: relative
	padding-top : 1em
	text-align	: center
	.item
		col(1/7)
		img
			height			:auto
			hover-pop()
			+from-width('mini')
				width		:100%
			+from-width('small')
				width		:100%
			+from-width('medium')
				width		: 100%
			+from-width('large')
				width		: 80%
			+from-width('extra')
				width		: 80%

.categoriax3
	col(3/3)
	span
		col(1/3)

.categoriax2
	col(2/2)
	span
		col(1/2)

span
	p
		font-size			: 4vw
		font-weight			: 800
		text-align			: center
		+from-width('medium')
			font-size		: 3vw
			line-height		: 2.5vw
		+from-width('large')
			font-size		: 2vw
		+from-width('extra')
			font-size		: 2vw
			
