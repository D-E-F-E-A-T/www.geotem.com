.cover 
		position : relative
	.cover-img
		position : relative
		
	.cover-img	img
		height 		: auto
		position 	: relative
		width  		: 100%
	
	.cover-caption
		background 	: black
		bottom 		: 0
		color 		: white
		opacity 	: 0.5
		padding 	: 0.5rem
		position 	: absolute
		width 		: 100%

.country
	display : block
	span
		col(1/2)
		margin-right 	: 0
		margin-left 	: 1%
		+from-width('m')
			col(1/5)
			margin-right 	: 0
			margin-left 	: 2%		 
		+from-width('l')
			col(1/10) 		
		+from-width('xl')
			col(1/10)
span
	p
		font-size 			: 4.5vw
		font-weight 		: 800
		text-align 			: center
		+from-width('m')
			font-size 		 : 3vw
		+from-width('l')
			font-size 		 : 1.5vw
		+from-width('xl')
			font-size 		 : 1.5vw
