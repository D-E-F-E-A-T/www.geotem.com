.menu
	display     : none
	position 	: fixed
	top 		: 50%
	background-color : blue !important
	width 		: 3rem
	z-index 	: 100
	right		: -2.5rem
	transition  : right 500ms ease-in-circ
	box-shadow  : -6px 4px 11px #888888

	&:hover
		right    : 0
		
	+from-width('medium')
		display  : block
	+from-width('large')
		display  : block	