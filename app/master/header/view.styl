&
	// Jeet (https://github.com/mojotech/jeet/tree/master/stylus)
	
	center(100%, 1rem)

	background-color : $white
	display          : flex
	padding          : 0.5rem

	.header-logo
		span(1/2)
		text-align  : right
		width       : 50%

		+from-width('medium')
			text-align  : left
		+from-width('normal')
			text-align  : left
			width       : 53%
	
		img
			height      : 4em
			margin-right: 3em
			margin-top  : 0.5rem
			position 	: relative
			width       : 90%
			z-index 	: 0
			
			+from-width('medium')
				width   : 70%
			+from-width('normal')
				text-align  : left
				width       : 53%
			+from-width('large')
				float   : left

	.header-menu
		span(1/2)
		position   : relative
		top 	   : 1em
		
		+from-width('large')
			margin-left: -17rem
			width      :69%
					
			
		.menu
			display 				: 	none
			width 					: 	100%
			
			
			
			ul
				center(100%, 0)
				list-style 			: 	none
				margin 				:   0

			li
				display 			: 	inline-block
				margin-left 		: 	2.8em
				padding 			:   1em 1em 1em 1em
			a
				// hover-color 	: $color-2nd-brighter // Axis
				// margin-right : 1rem
				color       		: 	$color-1st
				font-size       	: 	1.2rem
				text-decoration 	: 	none
				hover-underline 	: 	3px solid red
			

			+from-width('medium')
				display : none
			+from-width('large')
				display : block
				li
					margin-left   	: 	2.8em
				a
					
					font-size       : 	1.1rem
			+from-width('extra')
				a
					font-size       : 	1.4rem	
		
			.submenu
				background-color 	: 	rgba(255,255,255,0.9)
				box-shadow 			: 	10px 10px 5px 0px rgba(0,0,0,0.15)
				display 			: 	none
				opacity 			: 	0
				padding  			: 	0
				position  			: 	absolute
				top  				: 	3.5rem
				visibility 			: 	hidden
				width 				: 	17em
				z-index 			: 	10
			
				
			
			.submenu li 
				color 				: 	#fff
				display 			: 	block;
				margin 				: 	0
				padding 			: 	0.8rem	
				
			
			.m1
				left  				: 	11.3rem		
			.m2
				
				left  				: 	23rem
			.m3
				
				left  				: 	57.5rem
				
			.submenu li a:hover 
				color 		  		:  red !important
			
			ul li:hover .submenu 
					display 		: 	block;
					opacity 		: 	1;
					visibility 		: 	visible;
			
			



