&
	// Jeet (https://github.com/mojotech/jeet/tree/master/stylus)
	edit()
	center(100%, 1rem)

	background-color : $white
	padding          : 0.5rem
	display          : flex

	.header-logo
		span(1/2)
		text-align  : right
		width       : 50%

		+from-width('medium')
			text-align  : left
		+from-width('normal')
			text-align  : left
			width       : 53%
	
		img
			height      : 4em
			margin-right: 3em
			width       : 90%
			margin-top  : 0.5rem
			
			+from-width('medium')
				width   : 70%
			+from-width('normal')
				text-align  : left
				width       : 53%
			+from-width('large')
				float   : left

	.header-menu
		span(1/2)
		position   : relative
		top 	   : 1em
		
		+from-width('large')
			margin-left: -17rem
			width      :69%
					
			
		.menu
			display:none
			width : 100%
			ul
				center(100%, 0)
				list-style: none

			li
				display : inline-block
				margin-left: 2.8em
				
			a
				color       	: $color-1st
				hover-color 	: $color-2nd-brighter // Axis
				text-decoration : none
				margin-right    : 1rem
				font-size       : 1.2rem
			

			+from-width('medium')
				display : none
			+from-width('large')
				display : block
				li
					margin-left   : 2.8em
				a
					margin-right   : -1.4rem
					font-size       : 1.1rem
			+from-width('extra')
				a
					font-size       : 1.4rem	
		
			.sub-menu
				background-color : blue


		.menu-button
		.menu-content 	
			position : relative
			display  : none
			text-align   : right
			
			
			label.menu-button
				width 		: 20rem
				overflow    :hidden
				text-indent      : -22em

				&:after
					display    : block
					position   : absolute
					content    : "" 
					width      : 50%
					height     : 50%
					top        : 25%
					left       : 25%
					background-image: url('/static/menu.png')
				
				
				input.menu-button
					position : absolute
					opacity  : 0
					

					&:checked ~ label.menu-button
						background: $color-1st-darker
						
					&:checked ~ .menu-content
						width      : auto
						overflow   : visible
					
				.menu-content
					display         : flex
					flex-grow       : 0
					flex-flow       : column nowrap
					justify-content : space-between
					width      : 0
					overflow   : hidden
					background-color : blue

					ul
						background-color :blue
						padding-left: 6rem
						
						li, a
							position    : relative
						

					li
						display          : block
						flex-grow        : 0
					
		
			+from-width('medium')
				display: none
			+from-width('large')
				display: none
			