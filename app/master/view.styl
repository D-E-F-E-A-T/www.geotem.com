@require 'common'

// Nib's normalize
normalize-css()

body > header
	@require 'header/view'
	max-width : 100% !important
	text-align : center !important
	margin : 0 auto 0 auto !important
	position : relative !important
	top : 0  !important
	background-color : rgba(255,255,255,0.5) !important
	+from-width('mini')
		z-index : -1 !important
	+from-width('small')
		z-index : -1 !important
	+from-width('medium')
		z-index : -1 !important
	+from-width('normal')
		z-index : 2 !important
	+from-width('large')
		z-index : 2 !important
	+from-width('extra')
		z-index : 2 !important
	
	
body > footer
	@require 'footer/view'
	position : static
	bottom : 0

body > main
	margin-top : 2%
	background-color : #fff
	overflow         : hidden
	@require 'social/view'
	max-width : 100%
	position : absolute
	top : 0
	margin : 0 auto 0 auto
	+from-width('mini')
		position : relative
	+from-width('small')
		position : relative
	+from-width('medium')
		position : relative
	+from-width('large')
		position : absolute
	+from-width('extra')
		position : absolute


#fallback
	@require 'fallback/view'

.slicknav_menu
	display none

+to-width('medium')
	.slicknav_menu
		display block
		z-index 10
	.header-master
		display none
	#header
		z-index -10

